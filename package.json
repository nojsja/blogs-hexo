{
  "name": "hexo-site",
  "version": "0.0.0",
  "scripts": {
    "prestart": "hexo c --config config.dev.yml; hexo g --config config.dev.yml",
    "prestart:prod": "hexo c; hexo g",
    "predeploy": "hexo c; hexo g",
    "start": "hexo g --config config.dev.yml; hexo server --config config.dev.yml",
    "start:prod": "hexo g --config config.dev.yml; hexo s",
    "performance:prod": "lighthouse https://nojsja.gitee.io/blogs --view --preset=desktop --output-path='/home/nojsja/Desktop/lighthouse.html'",
    "performance": "lighthouse http://localhost:4000/blogs --view --preset=desktop --output-path='/home/nojsja/Desktop/lighthouse.html'",
    "deploy": "hexo d"
  },
  "hexo": {
    "version": "4.2.1"
  },
  "dependencies": {
    "github-markdown-css": "^4.0.0",
    "hexo": "^4.0.0",
    "hexo-all-minifier": "^0.5.3",
    "hexo-deployer-git": "^2.0.0",
    "hexo-generator-archive": "^1.0.0",
    "hexo-generator-baidu-sitemap": "^0.1.6",
    "hexo-generator-category": "^1.0.0",
    "hexo-generator-index": "^1.0.0",
    "hexo-generator-search": "^2.4.0",
    "hexo-generator-seo-friendly-sitemap": "0.0.25",
    "hexo-generator-sitemap": "^1.2.0",
    "hexo-generator-tag": "^1.0.0",
    "hexo-renderer-ejs": "^1.0.0",
    "hexo-renderer-markdown-it": "^5.0.0",
    "hexo-renderer-stylus": "^1.1.0",
    "hexo-server": "^1.0.0",
    "hexo-wordcount": "^6.0.1",
    "markdown-it-task-lists": "^2.1.1"
  },
  "devDependencies": {
    "lighthouse": "^7.4.0"
  }
}
